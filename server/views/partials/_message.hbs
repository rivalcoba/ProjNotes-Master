{{#if successMessage}}
  <script>
    M.toast({
      html: "<i class='material-icons'>done</i> {{ successMessage }}", 
      classes: 'card-panel green accent-4 white-text'})
  </script>
{{/if}}
{{#if infoMessage}}
  <script>
    M.toast({html: '
    {{infoMessage}}
    ', classes: 'info'})
  </script>
{{/if}}
{{#if errorMessage}}
  <script>
    M.toast({html: '
    {{errorMessage}}
    ', classes: 'error'})
  </script>
{{/if}}
{{#if passportError}}
  <script>
    M.toast({html: '
    {{passportError}}
    ', classes: 'error'})
  </script>
{{/if}}